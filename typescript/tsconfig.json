{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "ES5",
        "outDir": ".build",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "lib": [
            "es2015"
        ],
        "rootDir": "./"
    },
    "include": [
        "../src/**/*"
    ]
}